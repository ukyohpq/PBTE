<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="0" height="0">
	<fx:Script>
		<![CDATA[
			import command.CommandManager;
			
			import mx.events.MenuEvent;
			
			protected function menubar1_itemClickHandler(event:MenuEvent):void
			{
				CommandManager.doCommand(event.item.@data)
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<mx:MenuBar left="0" right="400" top="0" height="20" itemClick="menubar1_itemClickHandler(event)"
				labelField="@label">
		<mx:dataProvider>
			<s:XMLListCollection>
				<fx:XMLList>
					<menuitem label="Menu1" data="top">
						<menuitem label="MenuItem 1-A" data="1A"/>
						<menuitem label="MenuItem 1-B" data="1B"/>
					</menuitem>
					<menuitem label="Menu2" data="top">
						<menuitem label="MenuItem 2-A" type="check" data="2A"/>
						<menuitem type="separator"/>
						<menuitem label="MenuItem 2-B" >
							<menuitem label="SubMenuItem 3-A" type="radio"
									  groupName="one" data="3A"/>
							<menuitem label="SubMenuItem 3-B" type="radio"
									  groupName="one" data="3B"/>
						</menuitem>
					</menuitem>
				</fx:XMLList>
			</s:XMLListCollection>
		</mx:dataProvider>
	</mx:MenuBar>
</s:Group>
