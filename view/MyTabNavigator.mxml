				 initialize="tabnavigator1_initializeHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import spark.components.Button;
			
			protected function tabnavigator1_initializeHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				trace(this.tabBar)
				addEventListener(Event.ENTER_FRAME, onEnterFrame);
//				this.tabBar.addElement(new Button());
			}

			private function onEnterFrame(event:Event):void
			{
				if(this.tabBar){
					removeEventListener(Event.ENTER_FRAME, onEnterFrame);
				}
				this.tabBar.addChild(new Button());
				this.tabBar.addChild(new Button());
			}
			
		]]>
	</fx:Script>
